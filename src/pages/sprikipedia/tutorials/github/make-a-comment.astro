---
import '../../../../global.css'
import Categories from '../../../../layouts/categories.astro'
import Translations from '../../../../pages/sprikipedia/translations/translations.json'

const response = await fetch(
    `https://${Astro.url.host}/translations/${
        Astro.url.searchParams.get("lang") || Translations[0]
    }.json`
);
console.log(response);
const data = await response.json();
---

<Categories name={data["tutorials.categories.name.github.mcomment"]} title={data["tutorials.categories.title.github.mcomment"]} whats={data["tutorials.categories.whats.github.mcomment"]} about={data["tutorials.categories.about.github.mcomment"]}>
</Categories>